{
	"compileOnSave": false,
	"compilerOptions": {
		"allowJs": false,
		"lib": [ "ES2015", "DOM" ],
		"moduleResolution": "node",

		"listEmittedFiles": false,
		"listFiles": false,
		"skipDefaultLibCheck": true,
		"noEmitOnError": true,
		"pretty": true,

		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,

		"alwaysStrict": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"module": "ES2015",
		"newLine": "lf",
		"outDir": "../dist/src.es7",
		"sourceMap": true,
		"target": "ES2017"
	},
	"include": [
		"../typings-custom/**/*.ts",
		"../src/**/*.ts"
	],
	"exclude": [
	]
}
